<!-- 导入模板 -->
<import src="/template/card/card.wxml" />
<import src="/template/head/head.wxml" />
<import src="/template/placeholder/placeholder.wxml" />

<view class="explore">
  <!-- 分类导航 -->
  <view class="classify">
    <navigator class="classify__item" url="/pages/explore/activity/activity">
      <text class="classify__activity">校园活动</text>
    </navigator>
    <navigator class="classify__item" url="/pages/explore/news/news">
      <text class="classify__job">新闻聚合</text>
    </navigator>
    <navigator class="classify__item" url="/pages/explore/download/download">
      <text class="classify__download">文件下载</text>
    </navigator>
  </view>
  <!-- 主体部分 -->
  <view class="main">
    <!-- 热门活动 -->
    <view class="topic">
      <template is="head-classify" data="{{title: '热门活动', href: 'pages/explore/activity/activity'}}" />
      <!-- 活动列表 -->
      <block wx:if="{{activityList.length !== 0}}" wx:for="{{activityList}}" wx:key="*this">
        <template is="card-image" data="{{...item}}" />
      </block>
      <block wx:if="{{activityList.length === 0}}">
        <template is="placeholder-basic" data="{{bg: '/images/placeholder/bg_no_data.png', text: '暂无活动'}}"/>
      </block>
    </view>
  </view>
</view>
