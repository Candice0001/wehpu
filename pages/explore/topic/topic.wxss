.container{
  position: absolute;
  box-sizing: border-box;
  padding: 0 30rpx;
  height: 100%;
  background-color: #f7f7f7;
}
/* 话题卡片 */
.topic-card{
  box-sizing: border-box;
  min-height: 180rpx;
  margin-top: 45rpx;
  margin-bottom: 45rpx;
  padding: 30rpx 15rpx;
  background-color: #fff;
  box-shadow: 0 0 6rpx 6rpx #eee;
  border-radius: 2rpx;
  overflow: hidden;
}
.topic-card__title{
  display: block;
  padding-bottom: 15rpx;
  color: #000;
  font-size: 12pt;
  font-weight: bold;
}
.topic-card__description{
  color: #999;
  font-size: 10pt;
}