.topic-details {
  padding: 30rpx;
  background-color: #fff;
}
.details-box {
  margin-top: 15rpx;
  padding: 45rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 0 60rpx #ccc;
}
.details-box__head {
  padding-top: 15rpx;
  padding-bottom: 45rpx;
  font-size: 16pt;
  font-weight: bold;
  border-bottom: solid 1rpx #eee;
}
.details-box__content {
  max-height: 670rpx;
  padding-top: 45rpx;
  font-size: 12pt;
  font-weight: 400;
  color: #666;
  line-height: 2;
  overflow-y: scroll;
}
.details-box__foot {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 35rpx;
  padding-top: 35rpx;
  border-top: solid 1rpx #eee;
}
.details-box__from {
  font-size: 10pt;
  color: #666;
}
.details-box__share {
  display: flex;
  align-items: center;
  margin: 0;
  padding: 0;
  border: none;
  outline: none;
  background-color: transparent;
}
/* reset button */
button::after {
  content: '';
  width: 0;
  height: 0;
}
.details-box__ic-share {
  width: 45rpx;
  height: 45rpx;
}
