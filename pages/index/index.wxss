/* 工具导航 */
.index-tools {
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
  padding: 20rpx 15rpx 15rpx;
  margin-bottom: 30rpx;
  min-height: 350rpx;
  background: #fff;
  overflow: hidden;
}
.index-tools__item {
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  width: 25%;
  height: 180rpx;
}
.index-tools__icon {
  display: block;
  width: 90rpx;
  height: 90rpx;
  margin: 25rpx auto 15rpx auto;
}
.index-tools__name {
  display: block;
  font-size: 11pt;
}
/* 主体部分 */
.index-main {
  display: block;
  box-sizing: border-box;
  margin-top: 45rpx;
  padding: 45rpx 30rpx;
  height: 1000rpx;
  background-color: #f7f7f7;
}
/* 我的课程信息 */
.kb-list__meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.kb-list__r-icon {
  display: inline-block;
  width: 16rpx;
  height: 28rpx;
  margin-left: 15rpx;
  line-height: 1;
}
.kb-list__title {
  display: inline-block;
  margin-left: 15rpx;
  padding-left: 20rpx;
  line-height: 1;
  font-size: 13pt;
  font-weight: bold;
  color: #000;
  border-left: solid #cc3333 10rpx;
}
.kb-list__more {
  color: #cc3333;
  font-size: 12pt;
  font-weight: bold;
}
/* 课程卡片 */
.kb-card {
  display: flex;
  justify-content: space-around;
  align-items: flex-end;
  box-sizing: border-box;
  min-height: 240rpx;
  margin-top: 45rpx;
  margin-bottom: 45rpx;
  padding: 30rpx 15rpx;
  background-color: #fff;
  box-shadow: 0 0 6rpx 6rpx #eee;
  border-radius: 2rpx;
  overflow: hidden;
}
.kb-card__name {
  display: block;
  color: #000;
  font-size: 10pt;
}
.kb-card__room {
  display: block;
  padding: 30rpx 0 15rpx 0;
  color: #cc3333;
  font-size: 20pt;
  font-weight: bold;
}
.kb-card__place {
  display: block;
  color: #999;
  font-size: 9pt;
}
.kb-card__count {
  display: block;
  padding: 30rpx 0 15rpx 0;
  color: #000;
  font-size: 20pt;
  font-weight: bold;
}
.kb-card__teacher {
  display: block;
  color: #999;
  font-size: 9pt;
}
.kb-card__state {
  display: block;
  padding: 10rpx 20rpx;
  margin: 30rpx 0 15rpx 0;
  font-size: 11pt;
  color: #fff;
  border-radius: 50rpx;
}
.kb-card__state--on {
  background-color: #cc3333;
}
.kb-card__state--off {
  background-color: #999;
}
.kb-card__time {
  display: block;
  margin-left: 15rpx;
  color: #999;
  font-size: 9pt;
}
