.userinfo {
  box-sizing: border-box;
  padding: 15rpx 45rpx 45rpx 45rpx;
  overflow: hidden;
}
.userinfo__item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 40rpx 0;
  background-color: #fff;
  border-bottom: solid 1rpx #eee;
}
.userinfo__l-text {
  font-size: 12pt;
  font-weight: bold;
  color: #000;
}
.userinfo__r-text {
  font-size: 11pt;
  color: #999;
}
.userinfo__avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.userinfo__r-wrap {
  display: flex;
  align-items: center;
}
.userinfo__r-icon {
  width: 45rpx;
  height: 45rpx;
  margin-left: 10rpx;
}
