.course {
}

/* 头部周次 */
.course__head {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-wrap: nowrap;
  height: 100rpx;
  background-color: #f7f7f7;
  z-index: 9;
}
.course__weekly,
.course__week {
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  height: 100%;
  margin-right: 8rpx;
  text-align: center;
  font-size: 11pt;
  font-weight: bold;
}
.course__weekly {
  flex: 1;
  padding-left: 10rpx;
}
.course__week {
  flex: 2;
}

/* 主体部分 */
.course__main {
  display: flex;
  flex-wrap: nowrap;
  justify-content: center;
  margin-top: 100rpx;
  z-index: 8;
}
.course__left {
  box-sizing: border-box;
  flex: 1;
  padding-left: 10rpx;
  margin-right: 8rpx;
  font-size: 11pt;
  background-color: #f7f7f7;
}
.course__section {
  box-sizing: border-box;
  position: relative;
  flex: 2;
  margin-right: 8rpx;
  font-weight: bold;
  /* background-color: #f7f7f7; */
}
.course__time-slot {
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 160rpx;
}

.actived {
  background-color: #ccffff;
}

/* 课程信息 */
.course__item {
  box-sizing: border-box;
  position: absolute;
  height: 310rpx;
  margin-top: 10rpx;
  padding: 8rpx 5rpx;
  font-size: 10pt;
  color: #fff;
  background-color: #99ccff;
  border-radius: 15rpx;
}

/* 定位槽 */
.course__time-slot-12 {
  top: 0;
}
.course__time-slot-34 {
  top: 320rpx;
}
.course__time-slot-56 {
  top: 640rpx;
}
.course__time-slot-78 {
  top: 960rpx;
}
.course__time-slot-910 {
  top: 1280rpx;
}
