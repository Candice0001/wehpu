.query {
  padding: 0 30rpx 30rpx 30rpx;
}

/* 底部 */
.query-list__foot {
  margin-top: 15rpx;
  text-align: center;
}
.query-list__tip {
  font-size: 9pt;
  color: #999;
}

/* 详细信息 */
.query-detail {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 9;
}
.query-detail__box {
  position: relative;
  width: 75%;
  max-height: 80%;
  padding: 45rpx 45rpx 15rpx 45rpx;
  background-color: #fff;
  border-radius: 5rpx;
  overflow-y: scroll;
  z-index: 10;
}
.query-detail__close {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 45rpx;
  height: 45rpx;
}
.query-detail__content {
  margin-bottom: 30rpx;
}
.query-detail__name {
  display: flex;
  flex-wrap: wrap;
  margin-right: 45rpx;
  font-size: 13pt;
  color: #000;
  font-weight: bold;
}
.query-detail__place,
.query-detail__weekly,
.query-detail__teacher {
  display: flex;
  align-items: center;
  margin-top: 30rpx;
  font-size: 11pt;
  line-height: 1;
}
.query-detail__title {
  color: #999;
  margin: 0 15rpx 0 0;
}
.query-detail__flag {
  color: #999;
  font-size: 8pt;
}
.query-detail__item {
  padding: 15rpx 0;
  border-top: solid 1rpx #f7f7f7;
}
.query-detail__place {
  font-size: 11pt;
  color: #000;
}
.query-detail__state {
  font-size: 9pt;
  color: #999;
}
