/* 报修 */
.repair {
  box-sizing: border-box;
  background-color: #f7f7f7;
  overflow: hidden;
}
.repair-form__item {
  box-sizing: border-box;
  margin-bottom: 15rpx;
  padding: 45rpx 45rpx 30rpx 45rpx;
  background-color: #fff;
}
.repair-form__title {
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: solid 1rpx #eee;
}
.repair-form__text {
  font-size: 13pt;
  color: #000;
  font-weight: bold;
}
.repair-form__required {
  color: #cc3333;
  font-weight: bold;
}
.repair-form__container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.repair-form__picker {
  flex: 1;
  font-size: 11pt;
}
.repair-form__r-icon {
  width: 64rpx;
  height: 64rpx;
  margin-left: 45rpx;
}

/* 提交反馈 */
.repair-form__post {
  margin-bottom: 0;
}
.repair-form__button--post {
  color: #fff;
  background-color: #0099ff;
  border: none;
  outline: none;
}
