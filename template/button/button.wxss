/* 自定义按钮 */
.button-secondary,
.button-primary {
  margin-top: 120rpx;
}
.button-primary__btn,
.button-secondary__btn {
  width: 80%;
  padding: 25rpx 45rpx;
  text-align: center;
  font-size: 13pt;
}
.button-primary {
  color: #fff;
  background-color: #cc3333;
  border-radius: 50rpx;
}
.button-secondary {
  color: #fff;
  background-color: #0099ff;
  border-radius: 50rpx;
}

/* 成对按钮 */
.button-pairs {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 145rpx;
}
.button-pairs__left,
.button-pairs__right {
  padding: 20rpx 0;
  text-align: center;
  font-size: 12pt;
  font-weight: bold;
  color: #fff;
  border-radius: 50rpx;
}
.button-pairs__left {
  flex: 1;
  background-color: #999;
}
.button-pairs__right {
  flex: 1.5;
  margin-left: 45rpx;
  background-color: #0099ff;
}

/* 拨号按钮 */
@keyframes fadeIn {
  0% {
    background-color: rgba(0, 0, 0, 0.1);
  }
  25% {
    background-color: rgba(0, 0, 0, 0.2);
  }
  50% {
    background-color: rgba(0, 0, 0, 0.3);
  }
  75% {
    background-color: rgba(0, 0, 0, 0.5);
  }
  100% {
    background-color: rgba(0, 0, 0, 0.6);
  }
}

@keyframes stretch {
  0% {
    margin-bottom: 10rpx;
  }
  50% {
    margin-bottom: 30rpx;
  }
  100% {
    margin-bottom: 60rpx;
  }
}

@keyframes slidUp {
  0% {
    bottom: -200rpx;
  }
  50% {
    bottom: 0rpx;
  }
  100% {
    bottom: 45rpx;
  }
}
