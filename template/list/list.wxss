/* 基础列表 */
.list-basic__item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 40rpx 0;
  background-color: #fff;
  border-bottom: solid 1rpx #eee;
}
.list-basic__l-text {
  font-size: 12pt;
  font-weight: bold;
  color: #000;
}
.list-basic__r-wrap {
  display: flex;
  align-items: center;
}
.list-basic__r-text {
  font-size: 11pt;
  color: #999;
}
.list-basic__r-icon {
  width: 45rpx;
  height: 45rpx;
  margin-left: 10rpx;
}
.list-basic__r-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

/* 图标列表 */
.list-icon__item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 45rpx;
  margin-left: 135rpx;
  border-bottom: solid 1rpx #eee;
}
.list-icon__text {
  flex: 1;
  margin-left: 45rpx;
  font-size: 12pt;
  font-weight: bold;
  color: #000;
}
.list-icon__l-icon {
  width: 60rpx;
  height: 60rpx;
  margin-left: -135rpx;
}
.list-icon__r-icon {
  width: 50rpx;
  height: 50rpx;
}

/* 缩略图列表 */
.list-thumbnail__item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 45rpx 0;
  margin-left: 150rpx;
  border-bottom: solid 1rpx #eee;
}
.list-thumbnail__image {
  width: 120rpx;
  height: 120rpx;
  margin-left: -150rpx;
}
.list-thumbnail__meta {
  display: flex;
  flex-direction: column;
  flex: 1;
  margin-left: 30rpx;
}
.list-thumbnail__title {
  padding-bottom: 15rpx;
  font-size: 12pt;
  font-weight: bold;
  color: #000;
}
.list-thumbnail__time {
  font-size: 10pt;
  color: #999;
  font-weight: bold;
}
.list-thumbnail__r-icon {
  width: 60rpx;
  height: 60rpx;
  margin-left: 15rpx;
}

/* 头像列表 */
.list-avatar {
  background-color: #fff;
  padding: 45rpx;
}
.list-avatar__item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding-bottom: 45rpx;
  background-color: #fff;
  border-bottom: solid 1rpx #eee;
}
.list-avatar__avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #eee;
}
.list-avatar__meta {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-left: 30rpx;
}
.list-avatar__nickName {
  padding-bottom: 10rpx;
  font-size: 13pt;
  font-weight: bold;
  color: #000;
}
.list-avatar__bind {
  font-size: 10pt;
  color: #999;
}
.list-avatar__r-icon {
  width: 50rpx;
  height: 50rpx;
}

/* 课表列表 */
.list-course {
  padding: 30rpx;
  background-color: #fff;
}
.list-course__head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 30rpx;
}
.list-course__today {
  color: #cc3333;
  font-size: 13pt;
  font-weight: bold;
}
.list-course__sections {
  color: #999;
  font-size: 10pt;
}
.list-course__item {
  display: flex;
  margin-top: 15rpx;
  padding: 30rpx 0;
  border-bottom: dotted 4rpx #eee;
}
.list-course__section {
  display: flex;
  flex: 1;
  align-items: center;
  margin-left: 30rpx;
  font-size: 16pt;
  color: #000;
  font-weight: 400;
}
.list-course__info {
  flex: 4;
}
.list-course__name {
  font-size: 13pt;
  font-weight: 400;
  color: #000;
}
.list-course__place {
  margin-top: 15rpx;
  font-size: 11pt;
  font-weight: 400;
  color: #999;
}
